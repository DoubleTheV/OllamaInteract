<?xml version="1.0" encoding="UTF-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OllamaInteract.GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:OllamaInteract.GUI.Converters"
        xmlns:lucide="clr-namespace:LucideAvalonia;assembly=LucideAvalonia"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="OllamaInteract.GUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="OllamaInteract.GUI"
        PointerPressed="BackgroundClicked">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Resources>
        <conv:RoleConverterUser x:Key="RoleConverterUser" />
        <conv:RoleConverterAI x:Key="RoleConverterAI" />
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Border.ChatBubble">
            <Setter Property="Margin" Value="0,10,10,0" />
            <Setter Property="Background" Value="#212529"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="MaxWidth" Value="600" />
            <Setter Property="MinWidth" Value="400" />
        </Style>
        <Style Selector="Border.ChatBubble SelectableTextBlock.Content">
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style Selector="Border.ChatBubble TextBlock.Timestamp">
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,5,5,0" />
        </Style>
        <Style Selector="Border.ChatBubble.UserMessage">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style Selector="Border.ChatBubble.AIMessage">
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style Selector="StackPanel.MenuControls Button">
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Width" Value="180" />
        </Style>
    </Window.Styles>

    <Grid ColumnDefinitions="Auto, *" Margin="10">

        <!-- Model Management-->
        <Border Grid.ColumnSpan="2" ZIndex="2" HorizontalAlignment="Stretch" CornerRadius="8" BorderBrush="#6c757d" BorderThickness="1"
                IsVisible="{Binding ModelManagementVisible}" Background="Black">
            <!-- Grid-->
            <Grid RowDefinitions="Auto, *" ColumnDefinitions="Auto, *">
                <!-- Control-->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <Button Content="X" Foreground="Red" Command="{Binding ModelManagementButtonPressedCommand}"/>
                </StackPanel>
                <!-- Model List-->
                <Border Grid.Row="1" Grid.Column="0" CornerRadius="8" BorderBrush="#6c757d" BorderThickness="1" MinWidth="150" MaxWidth="200" Margin="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="5">
                            <ItemsControl ItemsSource="{Binding AvailableModels}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,5" HorizontalAlignment="Stretch" CornerRadius="8" Background="#333333">
                                            <Grid ColumnDefinitions="*,Auto">
                                                <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="0" Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
                                                <Button Grid.Column="1" Margin="5,0,0,0">
                                                    <lucide:Lucide Icon="Pencil" StrokeBrush="White" Width="16" />
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                <!-- Model Search-->
                <DockPanel Grid.Row="1" Grid.Column="1" Margin="0,5,5,5" IsVisible="False">
                    <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center">
                        <TextBlock Text="Search for models:" HorizontalAlignment="Center" FontSize="20" />
                        <TextBox HorizontalAlignment="Center" MinWidth="400" FontSize="18" Text="{Binding SearchQuery}" />
                    </StackPanel>
                    <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,10,0,0">
                        <ItemsControl ItemsSource="{Binding SearchedModels}" HorizontalAlignment="Stretch">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    </WrapPanel>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="White" BorderThickness="1" CornerRadius="8" MaxWidth="300" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" Margin="5" FontSize="20" TextWrapping="Wrap" />
                                            <ItemsControl ItemsSource="{Binding ParameterS}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel HorizontalAlignment="Stretch" Orientation="Horizontal" Margin="2.5">
                                                        </WrapPanel>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Content="{Binding}" Margin="5" Click="PullModel" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
                <!-- Model Edit-->
                <DockPanel Grid.Row="1" Grid.Column="1" Margin="0,5,5,5" IsVisible="True" VerticalAlignment="Stretch" LastChildFill="False">
                    <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                        <TextBlock HorizontalAlignment="Center" FontSize="18" Margin="0 0 0 5">Parent model</TextBlock>
                        <TextBox HorizontalAlignment="Center" CornerRadius="8" BorderBrush="#6c757d" BorderThickness="1" FontSize="16" Text="Llama 2" Margin="5" IsEnabled="False" Background="Transparent"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="18" Margin="10 0 0 5">Model name</TextBlock>
                        <TextBox HorizontalAlignment="Center" CornerRadius="8" BorderBrush="#6c757d" BorderThickness="1" FontSize="16" Text="GLaDOS" Margin="5" Background="Transparent"/>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Bottom">
                        <TextBlock HorizontalAlignment="Center" FontSize="18" Margin="0 0 0 5">SYSTEM prompt</TextBlock>
                        <TextBox HorizontalAlignment="Stretch" CornerRadius="8" BorderBrush="#6c757d" BorderThickness="1" FontSize="16" Margin="5" Background="Transparent" MinHeight="150"
                                 KeyDown="HandleInputFunctions" AcceptsTab="False" TextWrapping="Wrap"/>
                        <Button HorizontalAlignment="Center" FontSize="18" Margin="0 20 0 0">Confirm</Button>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Border>

        <!-- Menu Popup-->
        <Border Name="MenuPopup" Grid.ColumnSpan="2" ZIndex="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsVisible="{Binding MenuVisible}"
                Margin="5,0,0,52">
            <StackPanel Name="MenuControls" Classes="MenuControls">
                <Button Content="Model Management" Command="{Binding ModelManagementButtonPressedCommand}"/>
                <!-- Not Implemented yet-->
                <Button Content="Settings" IsEnabled="False"/>
            </StackPanel>
        </Border>

        <!-- Main Content-->
        <Border Grid.Column="0" Margin="5" CornerRadius="8" BorderBrush="#6c757d" BorderThickness="1" MinWidth="150" MaxWidth="200">
            <DockPanel>
                <!-- Conversation List-->
                <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <Button Margin="0,0,0,5" HorizontalAlignment="Stretch"
                                Background="Transparent" BorderBrush="#6c757d" BorderThickness="1"
                                Command="{Binding AddConversationCommand}">
                            <TextBlock Text="+ Create new conversation" TextTrimming="CharacterEllipsis"/>
                        </Button>
                        <ItemsControl ItemsSource="{Binding Conversations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="0,0,0,5" HorizontalAlignment="Stretch"
                                            CommandParameter="{Binding ID}" 
                                            Command="{Binding $parent[Grid].DataContext.SwitchConversationCommand}}">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
                                            <Button Grid.Column="1" Margin="5,0,0,0" Content="X" Foreground="Red" 
                                                    Command="{Binding $parent[StackPanel].DataContext.DeleteConversationCommand}" CommandParameter="{Binding ID}" />
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
                <!-- Buttons-->
                <Border DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                    <Button Padding="10" FontSize="18" HorizontalAlignment="Stretch" Command="{Binding MenuButtonPressedCommand}">
                        <lucide:Lucide Icon="Menu" StrokeBrush="White" />
                    </Button>
                </Border>
            </DockPanel>
        </Border>
        <!-- Top Bar-->
        <Grid Grid.Column="1" RowDefinitions="Auto, *, Auto, Auto">
            <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="10">
                <TextBox Name="ConversationNameField" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding SelectedConversation.Name}" 
                         GotFocus="StartedNameChange" LostFocus="ConversationNameChanged" BorderThickness="0" />
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center"
                        Grid.Column="1" Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"
                            Text="Model: " FontSize="16" />
                    <!-- Model choice-->
                    <ComboBox HorizontalAlignment="Right" VerticalAlignment="Center" MinWidth="100" MaxWidth="250" 
                            ItemsSource="{Binding AvailableModels}" SelectedItem="{Binding SelectedModel}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontSize="16"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <!-- Parameter choice-->
                    <ComboBox HorizontalAlignment="Right" VerticalAlignment="Center" MinWidth="100" MaxWidth="250" 
                            ItemsSource="{Binding SelectedModel.ParameterS}" SelectedItem="{Binding SelectedParameter}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="16"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Grid>
            <!-- Conversation Content-->
            <Border Grid.Row="1" Margin="5" CornerRadius="8" BorderBrush="#6c757d" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <ItemsControl ItemsSource="{Binding ChatHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes.ChatBubble = "True" Classes.UserMessage="{Binding Role, Converter={StaticResource RoleConverterUser}}" Classes.AIMessage="{Binding Role, Converter={StaticResource RoleConverterAI}}">
                                        <StackPanel>
                                            <SelectableTextBlock Classes="Content" Text="{Binding Content}" TextWrapping="Wrap"/>
                                            <TextBlock Classes="Timestamp" Text="{Binding TimeStamp}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <!-- Input-->
            <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10" />
            <Grid Grid.Row="3" Margin="10" MinHeight="100" MaxHeight="150"
                ColumnDefinitions="*, Auto">
                <TextBox Name="UserPromptInputElement" Grid.Column="0" CornerRadius="8" BorderBrush="Transparent" Background="#212529" Margin="0,0,15,0"
                    IsEnabled="{Binding IsConnected}" Text="{Binding UserInput}" TextWrapping="Wrap" AcceptsTab="False"
                    KeyDown="HandleInputFunctions">
                </TextBox>
                <Button Content="Send" Grid.Column="1" IsEnabled="{Binding IsConnected}" Command="{Binding SendMessageCommand}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
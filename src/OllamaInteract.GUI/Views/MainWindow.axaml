<?xml version="1.0" encoding="UTF-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OllamaInteract.GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:OllamaInteract.GUI.Converters"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="OllamaInteract.GUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="OllamaInteract.GUI"
        PointerPressed="BackgroundClicked">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Resources>
        <conv:RoleConverterUser x:Key="RoleConverterUser" />
        <conv:RoleConverterAI x:Key="RoleConverterAI" />
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Border.ChatBubble">
            <Setter Property="Margin" Value="0,10,10,0" />
            <Setter Property="Background" Value="#212529"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="MaxWidth" Value="600" />
            <Setter Property="MinWidth" Value="400" />
        </Style>
        <Style Selector="Border.ChatBubble SelectableTextBlock.Content">
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style Selector="Border.ChatBubble TextBlock.Timestamp">
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,5,5,0" />
        </Style>
        <Style Selector="Border.ChatBubble.UserMessage">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style Selector="Border.ChatBubble.AIMessage">
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Styles>

    <Grid ColumnDefinitions="Auto, *" Margin="10">
        <!-- Main Content-->
        <Border Grid.Column="0" Margin="5" CornerRadius="8" BorderBrush="#6c757d" BorderThickness="1" MinWidth="150" MaxWidth="200">
            <!-- Conversation List-->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="5">
                    <Button Margin="0,0,0,5" HorizontalAlignment="Stretch"
                            Background="Transparent" BorderBrush="#6c757d" BorderThickness="1"
                            Command="{Binding AddConversationCommand}">
                        <TextBlock Text="+ Create new conversation" TextTrimming="CharacterEllipsis"/>
                    </Button>
                    <ItemsControl ItemsSource="{Binding Conversations}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="0,0,0,5" HorizontalAlignment="Stretch"
                                        CommandParameter="{Binding ID}" 
                                        Command="{Binding $parent[Grid].DataContext.SwitchConversationCommand}}">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
                                        <Button Grid.Column="1" Margin="5,0,0,0" Content="X" Foreground="Red" 
                                                Command="{Binding $parent[StackPanel].DataContext.DeleteConversationCommand}" CommandParameter="{Binding ID}" />
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Grid Grid.Column="1" RowDefinitions="Auto, *, Auto, Auto">
            <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="10">
                <TextBox Name="ConversationNameField" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding SelectedConversation.Name}" 
                         GotFocus="StartedNameChange" LostFocus="ConversationNameChanged" BorderThickness="0" />
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center"
                        Grid.Column="1" Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"
                            Text="Model: " FontSize="16" />
                    <ComboBox HorizontalAlignment="Right" VerticalAlignment="Center" MinWidth="100" MaxWidth="250" 
                            ItemsSource="{Binding AvailableModels}" SelectedItem="{Binding SelectedModel}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontSize="16"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Grid>
            <!-- Conversation Content-->
            <Border Grid.Row="1" Margin="5" CornerRadius="8" BorderBrush="#6c757d" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <ItemsControl ItemsSource="{Binding ChatHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes.ChatBubble = "True" Classes.UserMessage="{Binding Role, Converter={StaticResource RoleConverterUser}}" Classes.AIMessage="{Binding Role, Converter={StaticResource RoleConverterAI}}">
                                        <StackPanel>
                                            <SelectableTextBlock Classes="Content" Text="{Binding Content}" TextWrapping="Wrap"/>
                                            <TextBlock Classes="Timestamp" Text="{Binding TimeStamp}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <!-- Input-->
            <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10" />
            <Grid Grid.Row="3" Margin="10" MinHeight="100" MaxHeight="150"
                ColumnDefinitions="*, Auto">
                <TextBox Name="UserPromptInputElement" Grid.Column="0" CornerRadius="8" BorderBrush="Transparent" Background="#212529" Margin="0,0,15,0"
                    IsEnabled="{Binding IsConnected}" Text="{Binding UserInput}" TextWrapping="Wrap" AcceptsTab="False"
                    KeyDown="HandleInputFunctions">
                </TextBox>
                <Button Content="Send" Grid.Column="1" IsEnabled="{Binding IsConnected}" Command="{Binding SendMessageCommand}" />
            </Grid>
        </Grid>
    </Grid>
</Window>